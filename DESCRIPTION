Package: traumar
Type: Package
Title: Calculate Metrics for Trauma System Performance
Version: 1.0.0
Authors@R: c(
    person(
      "Nicolas", "Foss",
      email = "nicolas.foss@hhs.iowa.gov",
      role = c("aut", "cre")
    ),
    person(
    "Iowa Department of Health and Human Services", 
    role = "cph"
    )
